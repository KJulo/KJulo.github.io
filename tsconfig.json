{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "astro/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@commons/*": ["./src/commons/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@modules/*": ["./src/modules/*"],
      "@pages/*": ["./src/pages/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@images/*": ["./public/images/*"],
      "@icons/*": ["./public/images/icons/*"],
    }
  }
}