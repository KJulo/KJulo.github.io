---
const { text, class: className } = Astro.props;
---

<div class="group/tooltip relative">
  <div
    class:list={[
      "absolute bottom-1 hidden w-full whitespace-nowrap pr-0.5 group-hover/tooltip:block",
      className,
    ]}
  >
    <div
      class="flex translate-y-full flex-col-reverse items-center justify-start"
    >
      <div
        class="cursor-default rounded-lg border-l-sky-300 bg-stone-50 px-3 py-1 text-base text-neutral-800 shadow-md dark:bg-neutral-700 dark:text-white"
      >
        {text}
      </div>
      <div
        class="-mb-[1px] h-0 w-0 border-b-[8px] border-l-[12px] border-r-[12px] border-b-stone-50 border-l-transparent border-r-transparent dark:border-b-neutral-700"
      >
      </div>
    </div>
  </div>
  <slot />
</div>
