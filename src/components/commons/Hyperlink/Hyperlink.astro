---
interface Props {
  class?: string;
  target: string;
  href: string;
}

const { class: className, target, href } = Astro.props;
---

<a
  href={href}
  target={target}
  class="transition hover:bg-gray-100 dark:border-neutral-700 dark:bg-neutral-900 dark:hover:bg-neutral-800"
  class:list={["rounded-2xl border-2 border-gray-200 bg-white px-4", className]}
>
  <slot />
</a>
