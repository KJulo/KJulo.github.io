---
import Card from "./components/Card/Card.astro";
import CarrouselIcons from "./components/CarrouselIcons/CarrouselIcons.astro";
import Experience from "./components/Experience/Experience.astro";

import LinkedIn from "@icons/LinkedIn.svg?raw";
import Github from "@icons/Github.svg?raw";
import Gitlab from "@icons/Gitlab.svg?raw";
import Mail from "@icons/Mail.svg?raw";

import { BACKEND_STACK, FRONTEND_STACK } from "./constants";
---

<div
  class="md:grid-cols-4 md:grid-rows-5 lg:grid-cols-4 lg:grid-rows-5 grid h-full w-full grid-cols-2 grid-rows-7 gap-4 sm:grid-cols-2 sm:grid-rows-9"
>
  <Card
    class="lg:order-1 group flex flex-grow flex-col flex-wrap content-center border-blue-400 border-opacity-70 bg-blue-600 bg-opacity-10 transition-all hover:bg-blue-500 max-sm:col-span-1"
  >
    <svg
      set:html={LinkedIn}
      class="h-12 w-12 fill-blue-500 text-center transition-all group-hover:fill-white"
    />
  </Card>

  <Card
    class="lg:order-2 flex flex-grow flex-col flex-wrap content-center border-purple-400 border-opacity-70 bg-purple-600 bg-opacity-10 transition-all hover:bg-purple-600 max-sm:col-span-1"
  >
    <svg set:html={Github} class="h-12 w-12 text-center dark:fill-white" />
  </Card>

  <Card
    class="lg:order-4 flex flex-grow flex-col flex-wrap content-center border-red-400 border-opacity-70 bg-red-600 bg-opacity-10 transition-all hover:bg-red-600"
  >
    <svg
      set:html={Mail}
      class="h-12 w-14 fill-neutral-600 text-center dark:fill-white"
    />
  </Card>

  <Card
    class="lg:order-5 flex flex-grow flex-col flex-wrap content-center border-orange-400 border-opacity-70 bg-orange-600 bg-opacity-10 transition-all hover:bg-orange-600"
  >
    <svg
      set:html={Gitlab}
      class="h-12 w-14 fill-neutral-600 text-center dark:fill-white"
    />
  </Card>

  <Card
    class="md:order-7 lg:order-3 row-span-2 flex flex-grow flex-col flex-wrap content-center border border-gray-300 bg-white py-6 sm:col-span-2 dark:border-neutral-700 dark:bg-neutral-900"
  >
    <CarrouselIcons items={FRONTEND_STACK} />
  </Card>

  <Card
    class="lg:order-7 row-span-2 flex flex-grow flex-col flex-wrap content-center border border-gray-300 bg-white py-6 sm:col-span-2 dark:border-neutral-700 dark:bg-neutral-900"
  >
    <CarrouselIcons items={BACKEND_STACK} />
  </Card>

  <Card
    class="md:row-span-4 lg:order-6 lg:row-span-3 col-span-2 row-span-3 border border-gray-300 bg-white dark:border-neutral-700 dark:bg-neutral-900"
  >
    <Experience />
  </Card>
</div>
