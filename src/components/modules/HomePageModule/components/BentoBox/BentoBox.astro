---
import Card from "./components/Card/Card.astro";
import CarrouselIcons from "./components/CarrouselIcons/CarrouselIcons.astro";
import Experience from "./components/Experience/Experience.astro";

import LinkedIn from "@icons/LinkedIn.svg?raw";
import Github from "@icons/Github.svg?raw";
import Gitlab from "@icons/Gitlab.svg?raw";
import Mail from "@icons/Mail.svg?raw";

import { BACKEND_STACK, FRONTEND_STACK } from "./constants";
import Tag from "../../../../commons/Tag/Tag.astro";
---

<div
  class="grid h-full w-full grid-cols-2 grid-rows-7 gap-4 sm:grid-cols-4 sm:grid-rows-9 md:grid-cols-4 md:grid-rows-6"
>
  <a href="https://www.linkedin.com/in/ignaciosilvae/" target="_blank">
    <Card
      class="group flex flex-grow flex-col flex-wrap content-center border-blue-400 border-opacity-70 bg-blue-600 bg-opacity-10 transition-all hover:bg-blue-400 max-sm:col-span-1 dark:border-blue-600 dark:hover:bg-blue-600"
    >
      <svg
        set:html={LinkedIn}
        class="h-12 w-12 fill-blue-500 text-center transition-all group-hover:fill-white"
      />
    </Card>
  </a>

  <a href="mailto:ignacio.silva.e@gmail.com" target="_blank">
    <Card
      class="flex flex-grow flex-col flex-wrap content-center border-red-400 border-opacity-70 bg-red-600 bg-opacity-10 transition-all hover:bg-red-400 dark:border-red-600 dark:hover:bg-red-600"
    >
      <svg
        set:html={Mail}
        class="h-12 w-14 fill-neutral-600 text-center dark:fill-white"
      />
    </Card>
  </a>

  <a href="https://github.com/KJulo" target="_blank">
    <Card
      class="flex flex-grow flex-col flex-wrap content-center border-purple-400 border-opacity-70 bg-purple-600 bg-opacity-10 transition-all hover:bg-purple-400 max-sm:col-span-1 dark:border-purple-600 dark:hover:bg-purple-600"
    >
      <svg set:html={Github} class="h-12 w-12 text-center dark:fill-white" />
    </Card>
  </a>

  <a href="https://gitlab.com/isilva3" target="_blank">
    <Card
      class="flex flex-grow flex-col flex-wrap content-center border-orange-400 border-opacity-70 bg-orange-600 bg-opacity-10 transition-all hover:bg-orange-400 dark:border-orange-600 dark:hover:bg-orange-600"
    >
      <svg
        set:html={Gitlab}
        class="h-12 w-14 fill-neutral-600 text-center dark:fill-white"
      />
    </Card>
  </a>

  <Card
    class="row-span-2 border border-gray-300 bg-white sm:col-span-2 sm:row-span-3 md:row-span-2 dark:border-neutral-700 dark:bg-neutral-900"
  >
    <div class="flex h-full flex-col content-start p-4">
      <Tag color="blue" text="Frontend" class="self-start" />
      <CarrouselIcons items={FRONTEND_STACK} class="m-auto" />
    </div>
  </Card>

  <Card
    class="row-span-2 border border-gray-300 bg-white sm:col-span-2 sm:row-span-3 md:row-span-2 dark:border-neutral-700 dark:bg-neutral-900"
  >
    <div class="flex h-full flex-col content-start p-4">
      <Tag color="green" text="Backend" class="self-start" />
      <CarrouselIcons items={BACKEND_STACK} class="m-auto" />
    </div>
  </Card>

  <Card
    class="col-span-2 row-span-3 border border-gray-300 bg-white sm:col-span-4 sm:row-span-5 md:row-span-4 lg:row-span-3 dark:border-neutral-700 dark:bg-neutral-900"
  >
    <Experience />
  </Card>
</div>
