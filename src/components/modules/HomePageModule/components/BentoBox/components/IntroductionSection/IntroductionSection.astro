---
import { getI18N } from "@i18n/index";
const { currentLocale } = Astro;
const literals = getI18N(currentLocale);
---

<div
  class="m-auto flex h-full flex-col justify-center gap-2 p-8 text-start align-middle"
>
  <h3 class="text-2xl font-bold">{literals.INTRODUCTION.TITLE}</h3>
  <span class="text-neutral-400"
    >{literals.INTRODUCTION.DESCRIPTION}
    <a
      href="https://i-car.cl/"
      class="underline hover:text-neutral-500 hover:dark:text-neutral-300"
      target="_blank">Icar</a
    >
  </span>
</div>
